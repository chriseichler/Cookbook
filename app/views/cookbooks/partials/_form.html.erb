<%= form_for @cookbook do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br>
<%= f.label :cuisine %>
<%= f.text_field :cuisine %><br>
<%= f.label :description %>
<%= f.text_field :description %><br>

<% @recipes.each do |recipe| %>
<%= recipe.name %>
<%= check_box_tag 'cookbook[recipe_ids][]', recipe.id, recipe.in?(@cookbook.recipes.to_a) %>
<% end %>

<%= f.submit %>
<% end %>


